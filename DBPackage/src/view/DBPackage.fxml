<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About DBPackage" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <BorderPane prefHeight="800.0" prefWidth="600.0" style="-fx-padding: 10;">
         <top>
            <HBox alignment="CENTER" style="-fx-spacing: 10;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="URL:" />
                  <TextField fx:id="textField" prefHeight="22.0" prefWidth="460.0" />
                  <Button fx:id="searchBut" mnemonicParsing="false" text="Search" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="258.0" prefWidth="591.0" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="vPane" alignment="CENTER_LEFT" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content></ScrollPane>
         </center>
         <bottom>
            <HBox alignment="CENTER" style="-fx-spacing: 10;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="genBut" mnemonicParsing="false" text="Generate Package" />
                  <Button fx:id="exitBut" mnemonicParsing="false" text="Exit" />
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
  </children>
</VBox>
